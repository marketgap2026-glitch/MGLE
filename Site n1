    <script>
        // R√âPARATION DU SCRIPT
        const cursor = document.querySelector('.cursor');
        const follower = document.querySelector('.cursor-follower');
        
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
            setTimeout(() => {
                follower.style.left = e.clientX + 'px';
                follower.style.top = e.clientY + 'px';
            }, 50);
        });

        const brandToggle = document.getElementById('brandToggle');
        const slider = document.getElementById('slider');
        const brandName = document.getElementById('brandName');
        const marketgap = document.getElementById('marketgap');
        const logoexpanse = document.getElementById('logoexpanse');
        const mainNav = document.getElementById('mainNav');
        const offreSelect = document.getElementById('offre-select');
        const labelMG = document.getElementById('labelMG');
        const labelLE = document.getElementById('labelLE');

        let isMarketGap = true;

        function updateBrandIdentity() {
            if (isMarketGap) {
                marketgap.classList.remove('hidden-content');
                marketgap.classList.add('visible-content');
                logoexpanse.classList.add('hidden-content');
                logoexpanse.classList.remove('visible-content');
                
                labelMG.classList.add('active');
                labelLE.classList.remove('active');
                slider.style.transform = 'translateX(0)';
                slider.style.background = '#6366f1';
                brandName.textContent = 'MARKETGAP';
                brandName.style.color = '#6366f1';

                mainNav.innerHTML = `
                    <a href="#services" class="hover:text-white transition-all">Agent IA</a>
                    <a href="#contact" class="text-indigo-500">Contact</a>`;
                
                offreSelect.innerHTML = `
                    <option value="Starter MG">Pack Starter (149‚Ç¨/mois)</option>
                    <option value="Pro MG">Pack Pro (299‚Ç¨/mois)</option>
                    <option value="Audit">Audit Gratuit</option>`;
            } else {
                logoexpanse.classList.remove('hidden-content');
                logoexpanse.classList.add('visible-content');
                marketgap.classList.add('hidden-content');
                marketgap.classList.remove('visible-content');

                labelLE.classList.add('active');
                labelMG.classList.remove('active');
                slider.style.transform = 'translateX(100%)';
                slider.style.background = '#ec4899';
                brandName.textContent = 'LOGO EXPANSE';
                brandName.style.color = '#ec4899';

                mainNav.innerHTML = `
                    <a href="#exemples" class="hover:text-white transition-all">Portfolio</a>
                    <a href="#contact" class="text-pink-500">Contact</a>`;
                
                offreSelect.innerHTML = `
                    <option value="Gratuit LE">Image Gratuite</option>
                    <option value="Pack Expert">Pack Full Branding</option>`;
            }
        }

        brandToggle.addEventListener('click', () => {
            isMarketGap = !isMarketGap;
            updateBrandIdentity();
        });

        function scrollToSection(id, val) {
            document.getElementById(id).scrollIntoView({behavior: 'smooth'});
            if(val) offreSelect.value = val;
        }

        // Initialisation
        updateBrandIdentity();
    </script>
</body>
